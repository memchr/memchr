{
	"$schema": "https://raw.githubusercontent.com/devcontainers/spec/main/schemas/devContainer.schema.json",
	"name": "Arch Linux",
	"build": {
		"dockerfile": "Dockerfile",
		"context": "."
	},
	"forwardPorts": [
		"22",
		"80",
		"433",
		"8000",
		"8080",
		"12345"
	],
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	],
	"remoteUser": "codespace",
	"containerUser": "codespace",
	"containerEnv": {
		"TERM": "xterm-256color",
		"EDITOR": "nvim"
	}
}
